%h1 Sign Up

= form_with model: @user, url: users_path, class: 'signup-form', local: true do |f|
  .field
    = f.label :name
    = f.text_field :name

  .field
    = f.label :email
    = f.email_field :email

  .field
    = f.label :password
    = f.password_field :password

  .actions
    = f.submit "Sign Up"
