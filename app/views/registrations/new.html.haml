.registration-page
  .form-header
    %h1 Register for Event
    .event-summary
      %h2= @event.title
      %p= @event.desc
      %p
        %strong Date: 
        = @event.date.strftime("%B %d, %Y")
      %p
        %strong Time: 
        = @event.start_time.strftime("%I:%M %p") + " - " + @event.end_time.strftime("%I:%M %p")
      %p.price
        %strong Price: 
        = "$#{@event.price}"

  .form-container
    .registration-form
      .registration-info
        %p You are registering as: #{current_user.name} (#{current_user.email})

      .payment-section
        %h3 Payment Information

        .payment-summary
          %p
            %strong Total Amount: 
            = "$#{@event.price}"

      .form-actions
        = button_to "Pay with Stripe", payment_checkout_path(@event), method: :post, class: "btn btn-primary stripe-payment-btn", data: { turbo: false }
        = link_to "Cancel", root_path, class: "btn btn-secondary"
